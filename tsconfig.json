{
    "compilerOptions": {
        
        "composite": true,

        /* JSX Options */
        "jsx": "react",
        /* Basic Options */
        "module": "commonjs",
        "target": "es2015",
        "outDir": "./dist",
        "removeComments": true,
        /* Type-Checking Options */
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        /* Source Map Options */
        "sourceMap": true,
        "declaration": true
    },
    "files": [
        "src/forTyping.ts"
    ]
}