{
    "compilerOptions": {
        /* JSX Options */
        "jsx": "react",
        /* Basic Options */
        "module": "commonjs",
        "target": "es2015",
        "outDir": ".",
        "removeComments": true,
        /* Type-Checking Options */
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        /* Source Map Options */
        "sourceMap": true,
        "declaration": true,
        /* webpack */
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "files": [
        "src/forTyping.ts"
    ]
}